{
  "name": "voltstrack-telegram-bot",
  "version": "1.0.0",
  "description": "Professional Telegram bot to track Solana wallet transactions in real-time. Monitor token swaps, detect buy/sell activities, and get notified instantly about trading activities on your favorite wallets.",
  "main": "bot.js",
  "scripts": {
    "start": "node main.js",
    "dev": "node --watch main.js",
    "test": "node test-env.js",
    "test:env": "node test-env.js",
    "local": "node bot.js",
    "replit": "node main.js",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "health": "curl http://localhost:3000/health || echo 'Health server not running'",
    "ping": "curl http://localhost:3000/ping || echo 'Ping server not running'",
    "debug": "node --inspect main.js",
    "logs": "node main.js 2>&1 | tee bot.log",
    "validate": "node -c main.js && node -c bot.js && node -c websocket-backend.js"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "node-telegram-bot-api": "^0.66.0",
    "voltstrack-telegram-bot": "file:",
    "ws": "^8.18.0"
  },
  "keywords": [
    "telegram",
    "bot",
    "solana",
    "wallet",
    "tracker",
    "cryptocurrency",
    "trading",
    "blockchain",
    "defi",
    "memecoin",
    "pump-fun",
    "websocket",
    "helius",
    "notification",
    "real-time"
  ],
  "author": {
    "name": "VoltsTrack",
    "url": "https://github.com/VoltsTrack"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/VoltsTrack/Volts-Tracker-Bot.git"
  },
  "bugs": {
    "url": "https://github.com/VoltsTrack/Volts-Tracker-Bot/issues"
  },
  "homepage": "https://github.com/VoltsTrack/Volts-Tracker-Bot#readme",
  "engines": {
    "node": ">=16.0.0"
  }
}
